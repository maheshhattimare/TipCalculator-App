<!-- res/drawable/tick_mark.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background of the tick mark (circle in this example). -->
    <item android:drawable="@android:color/transparent" />

    <!-- Define the shape of the tick mark (a small circle). Adjust the size and color as needed. -->
    <item
        android:width="8dp"
        android:height="8dp"
        android:top="3dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#444C5D" /> <!-- Replace with the desired color. -->
        </shape>
    </item>

</layer-list>
